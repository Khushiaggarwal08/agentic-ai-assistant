from openai import OpenAI

client = OpenAI(
    base_url="http://localhost:11434/v1",
    api_key="ollama"
)

def generate_general_answer(question: str, improvement_feedback: str = None) -> str:
    system_prompt = """
You are a calm, intelligent assistant who explains concepts clearly.
Your answers should be:
- Easy to understand for beginners
- Structured and logical
- Neutral and factual
- Friendly but professional
"""

    if improvement_feedback:
        system_prompt += f"""
The previous answer was rejected for this reason:
{improvement_feedback}

Please improve the answer.
"""

    response = client.chat.completions.create(
        model="llama3.1:8b",
        messages=[
            {"role": "system", "content": system_prompt},
            {"role": "user", "content": question}
        ]
    )

    return response.choices[0].message.content
